    status_command i3blocks
    position top
    font pango:BigBlueTermPlus Nerd Font 7
    separator_symbol "::"
    colors {
        background #000000
        statusline #AAAAAA

        focused_workspace #00AAAA #000000 #FFFFFF
        active_workspace #555555 #000000 #AAAAAA
